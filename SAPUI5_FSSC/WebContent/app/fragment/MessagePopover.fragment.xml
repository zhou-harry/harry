<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<MessagePopover id="messagePopover" items="{path:'alerts>/alerts/list'}"
		placement="Bottom">
		<MessagePopoverItem 
			type="{alerts>type}" 
			title="{alerts>title}"
			subtitle="{alerts>subTitle}"
			description="{alerts>description}"
			counter="{alerts>counter}"
			afterClose="onMessageItemClose" >
			<Link text="More Details" press="onDetailPress" />
		</MessagePopoverItem>
	</MessagePopover>
</core:FragmentDefinition>